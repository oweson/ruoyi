<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.LoverDescMapper">
    
    <resultMap type="LoverDesc" id="LoverDescResult">
        <result property="id"    column="id"    />
        <result property="loverName"    column="lover_name"    />
        <result property="loverAge"    column="lover_age"    />
        <result property="loveWeight"    column="love_weight"    />
        <result property="loverHair"    column="lover_hair"    />
        <result property="loverDesc"    column="lover_desc"    />
        <result property="createTime"    column="create_time"    />
        <result property="lastUpdateTime"    column="last_update_time"    />
    </resultMap>

    <sql id="selectLoverDescVo">
        select id, lover_name, lover_age, love_weight, lover_hair, lover_desc, create_time, last_update_time from lover_desc
    </sql>

    <select id="selectLoverDescList" parameterType="LoverDesc" resultMap="LoverDescResult">
        <include refid="selectLoverDescVo"/>
        <where>  
            <if test="loverName != null  and loverName != ''"> and lover_name like concat('%', #{loverName}, '%')</if>
            <if test="loverAge != null "> and lover_age = #{loverAge}</if>
            <if test="loveWeight != null "> and love_weight = #{loveWeight}</if>
            <if test="loverHair != null  and loverHair != ''"> and lover_hair = #{loverHair}</if>
            <if test="loverDesc != null  and loverDesc != ''"> and lover_desc = #{loverDesc}</if>
            <if test="lastUpdateTime != null "> and last_update_time = #{lastUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectLoverDescById" parameterType="Long" resultMap="LoverDescResult">
        <include refid="selectLoverDescVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertLoverDesc" parameterType="LoverDesc" useGeneratedKeys="true" keyProperty="id">
        insert into lover_desc
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="loverName != null  and loverName != ''">lover_name,</if>
            <if test="loverAge != null ">lover_age,</if>
            <if test="loveWeight != null ">love_weight,</if>
            <if test="loverHair != null  and loverHair != ''">lover_hair,</if>
            <if test="loverDesc != null  and loverDesc != ''">lover_desc,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="lastUpdateTime != null ">last_update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="loverName != null  and loverName != ''">#{loverName},</if>
            <if test="loverAge != null ">#{loverAge},</if>
            <if test="loveWeight != null ">#{loveWeight},</if>
            <if test="loverHair != null  and loverHair != ''">#{loverHair},</if>
            <if test="loverDesc != null  and loverDesc != ''">#{loverDesc},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="lastUpdateTime != null ">#{lastUpdateTime},</if>
         </trim>
    </insert>

    <update id="updateLoverDesc" parameterType="LoverDesc">
        update lover_desc
        <trim prefix="SET" suffixOverrides=",">
            <if test="loverName != null  and loverName != ''">lover_name = #{loverName},</if>
            <if test="loverAge != null ">lover_age = #{loverAge},</if>
            <if test="loveWeight != null ">love_weight = #{loveWeight},</if>
            <if test="loverHair != null  and loverHair != ''">lover_hair = #{loverHair},</if>
            <if test="loverDesc != null  and loverDesc != ''">lover_desc = #{loverDesc},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="lastUpdateTime != null ">last_update_time = #{lastUpdateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLoverDescById" parameterType="Long">
        delete from lover_desc where id = #{id}
    </delete>

    <delete id="deleteLoverDescByIds" parameterType="String">
        delete from lover_desc where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>